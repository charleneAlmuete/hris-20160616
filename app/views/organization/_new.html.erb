<%= simple_form_for @organization, url: new_organization_path, html: {class: "form-horizontal"} do |f| %>
<div class="col-lg-12">
	<div class="col-lg-5">
		<div class="form-group">
			<label class="control-label col-lg-4">Institution</label>
			<div class="col-lg-8">
				<%= f.text_field 'institution', class: "form-control" %>
			</div>
		</div>

		<div class="form-group">
			<label class="control-label col-lg-4">Title</label>
			<div class="col-lg-8">
				<%= f.text_field 'title', class: "form-control" %>
			</div>
		</div>

		<div class="form-group">
			<label class="control-label col-lg-4">From</label>
			<div class="col-lg-8">
				<%= f.text_field 'started', class: "form-control" %>
			</div>
		</div>

		<div class="form-group">
			<label class="control-label col-lg-4">To</label>
			<div class="col-lg-8">
				<%= f.text_field 'ended', class: "form-control" %>
			</div>
		</div>
	</div>
</div>
<br /><br />
<%= f.submit 'Save', class: 'btn btn-success btn-block' %>
<% end %>
