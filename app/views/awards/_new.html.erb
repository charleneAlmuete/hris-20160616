<%= simple_form_for @awards, url: new_award_path, html: {class: "form-horizontal"} do |f| %>
<div class="col-lg-12">
	<div class="col-lg-5">
		<div class="form-group">
			<label class="control-label col-lg-4">Name</label>
			<div class="col-lg-8">
				<%= f.text_field 'name', class: "form-control" %>
			</div>
		</div>

		<div class="form-group">
			<label class="control-label col-lg-4">Institution</label>
			<div class="col-lg-8">
				<%= f.text_field 'institution', class: "form-control" %>
			</div>
		</div>

		<div class="form-group">
			<label class="control-label col-lg-4">Date Given</label>
			<div class="col-lg-8">
				<%= f.text_field 'dateGiven', class: "form-control", type: "number" %>
			</div>
		</div>
	</div>
</div>
<br /><br />
<%= f.submit 'Save', class: 'btn btn-success btn-block' %>
<% end %>
