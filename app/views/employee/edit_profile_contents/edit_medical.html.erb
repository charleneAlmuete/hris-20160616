<div id="medical_content">
	<%= simple_form_for @medical, method: 'PUT', html: {class: "form-horizontal"} do |f| %>
	<div class="col-lg-12">
		<div class="col-lg-5">
			<div class="form-group">
				<label class="control-label col-lg-4">Condition</label>
				<div class="col-lg-8">
					<%= f.text_field 'condition', class: "form-control" %>
				</div>
			</div>

			<div class="form-group">
				<label class="control-label col-lg-4">Since</label>
				<div class="col-lg-8">
					<%= f.text_field 'started', class: "form-control", type: "number" %>
				</div>
			</div>

			<div class="form-group">
				<label class="control-label col-lg-4">Physician</label>
				<div class="col-lg-8">
					<%= f.text_field 'physician', class: "form-control" %>
				</div>
			</div>
		</div>
	</div>
	<br /><br />
	<%= f.submit 'Update', class: 'btn btn-success btn-block' %>
	<% end %>
</div>