
<%= simple_form_for @employee, url: employee_index_path, html: {class: "form-horizontal"} do |f| %>
<div class="col-lg-12">
	<div class="col-lg-4">
		<h4>Father Information</h4><hr>
		<div class="form-group">
			<label class="control-label col-lg-5">Name</label>
			<div class="col-lg-7">
				<%= f.text_field 'fatherName', class: "form-control" %>
			</div>
		</div>

		<div class="form-group">
			<label class="control-label col-lg-5">Address</label>
			<div class="col-lg-7">
				<%= f.text_field 'faAdd', class: "form-control" %>
			</div>
		</div>

		<div class="form-group">
			<label class="control-label col-lg-5">Occupation</label>
			<div class="col-lg-7">
				<%= f.text_field 'faOccupation', class: "form-control" %>
			</div>
		</div>

		<div class="form-group">
			<label class="control-label col-lg-5">Company</label>
			<div class="col-lg-7">
				<%= f.text_field 'faCompany', class: "form-control" %>
			</div>
		</div>

		<div class="form-group">
			<label class="control-label col-lg-5">Contact No</label>
			<div class="col-lg-7">
				<%= f.text_field 'faNo', class: "form-control" %>
			</div>
		</div>
	</div>
	<div class="col-lg-4">
		<h4>Mother Information</h4><hr>
		<div class="form-group">
			<label class="control-label col-lg-5">Name</label>
			<div class="col-lg-7">
				<%= f.text_field 'motherName', class: "form-control" %>
			</div>
		</div>

		<div class="form-group">
			<label class="control-label col-lg-5">Address</label>
			<div class="col-lg-7">
				<%= f.text_field 'moAdd', class: "form-control" %>
			</div>
		</div>

		<div class="form-group">
			<label class="control-label col-lg-5">Occupation</label>
			<div class="col-lg-7">
				<%= f.text_field 'moOccupation', class: "form-control" %>
			</div>
		</div>

		<div class="form-group">
			<label class="control-label col-lg-5">Company</label>
			<div class="col-lg-7">
				<%= f.text_field 'moCompany', class: "form-control" %>
			</div>
		</div>

		<div class="form-group">
			<label class="control-label col-lg-5">Contact No</label>
			<div class="col-lg-7">
				<%= f.text_field 'moNo', class: "form-control" %>
			</div>
		</div>
	</div>
	<div class="col-lg-4">
		<h4>Spouse Information <%= link_to 'Add Children', employee_new_path, class: "btn btn-info pull-right" %> </h4> <hr>
		<div class="form-group">
			<label class="control-label col-lg-5">Name</label>
			<div class="col-lg-7">
				<%= f.text_field 'spouseName', class: "form-control" %>
			</div>
		</div>

		<div class="form-group">
			<label class="control-label col-lg-5">Address</label>
			<div class="col-lg-7">
				<%= f.text_field 'spAdd', class: "form-control" %>
			</div>
		</div>

		<div class="form-group">
			<label class="control-label col-lg-5">Occupation</label>
			<div class="col-lg-7">
				<%= f.text_field 'spOccupation', class: "form-control" %>
			</div>
		</div>

		<div class="form-group">
			<label class="control-label col-lg-5">Company</label>
			<div class="col-lg-7">
				<%= f.text_field 'spCompany', class: "form-control" %>
			</div>
		</div>

		<div class="form-group">
			<label class="control-label col-lg-5">Contact No</label>
			<div class="col-lg-7">
				<%= f.text_field 'spNo', class: "form-control" %>
			</div>
		</div>
	</div>
</div>
<br /><br />
<%= f.submit 'Save', class: 'btn btn-success btn-block' %>
<% end %>
