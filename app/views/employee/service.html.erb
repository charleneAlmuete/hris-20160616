<div class="container-fluid">
	<h2>Employee Registration</h2>
	<div id="fontall" class="row well">
		<ul class="nav nav-pills nav-justified">
			<li><%= link_to 'P R O F I L E', new_employee_path %></li>
			<li class="active"><%= link_to 'S E R V I C E' %></li>
		</ul><br />

		<%= simple_form_for @child, url: employee_index_path, html: {class: "form-horizontal"} do |f| %>
		<div class="col-lg-12">
			<div class="col-lg-3">
				<h4>Job Information</h4><hr>
				<div class="form-group">
					<p class="control-label col-lg-5">Date Hired:</p>
					<div class="col-lg-7">
						<%= f.text_field 'fName', class: "form-control" %>
					</div>
				</div>

				<div class="form-group">
					<p class="control-label col-lg-5">Date Appointment:</p>
					<div class="col-lg-7">
						<%= f.text_field 'fName', class: "form-control" %>
					</div>
				</div>

				<div class="form-group">
					<p class="control-label col-lg-5">Position:</p>
					<div class="col-lg-7">
						<%= f.text_field 'fName', class: "form-control" %>
					</div>
				</div>

				<div class="form-group">
					<p class="control-label col-lg-5">Status:</p>
					<div class="col-lg-7">
						<%= f.text_field 'fName', class: "form-control" %>
					</div>
				</div>

				<div class="form-group">
					<p class="control-label col-lg-5">Company:</p>
					<div class="col-lg-7">
						<%= f.text_field 'fName', class: "form-control" %>
					</div>
				</div>

				<div class="form-group">
					<p class="control-label col-lg-5">Branch:</p>
					<div class="col-lg-7">
						<%= f.text_field 'fName', class: "form-control" %>
					</div>
				</div>
			</div>

			<div class="col-lg-3">
				<h4>Deductions Information</h4><hr>
				<div class="form-group">
					<p class="control-label col-lg-5">SSS:</p>
					<div class="col-lg-7">
						<%= f.text_field 'fName', class: "form-control" %>
					</div>
				</div>

				<div class="form-group">
					<p class="control-label col-lg-5">PHIC:</p>
					<div class="col-lg-7">
						<%= f.text_field 'fName', class: "form-control" %>
					</div>
				</div>

				<div class="form-group">
					<p class="control-label col-lg-5">HDMF:</p>
					<div class="col-lg-7">
						<%= f.text_field 'fName', class: "form-control" %>
					</div>
				</div>

				<div class="form-group">
					<p class="control-label col-lg-5">Withholding Tax:</p>
					<div class="col-lg-7">
						<%= f.text_field 'fName', class: "form-control" %>
					</div>
				</div>
			</div>

			<div class="col-lg-3">
				<h4>Allowances Information</h4><hr>
			</div>

			<div class="col-lg-3">
				<h4>Benefits/Incentives Information</h4><hr>
			</div>
		</div>
		<% end %><br />

		<div class="col-lg-12">
			<h4>Benefits/Incentives Information</h4><hr>
		</div>
	</div>
</div>
