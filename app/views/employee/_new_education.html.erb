<div id="education_content">
	<%= simple_form_for @education, url: employee_index_path, html: {class: "form-horizontal"} do |f| %>
	<div class="col-lg-12">
		<div class="col-lg-5">
			<div class="form-group">
				<label class="control-label col-lg-4">Level Type</label>
				<div class="col-lg-8">
					<%= f.select 'levelType', ['', 'Post Graduate', 'College', 'High School', 'Vocational'], {}, class: "form-control" %>
				</div>
			</div>

			<div class="form-group">
				<label class="control-label col-lg-4">Year Graduated</label>
				<div class="col-lg-8">
					<%= f.text_field 'yearGrad', class: "form-control",  type: "number" %>
				</div>
			</div>

			<div class="form-group">
				<label class="control-label col-lg-4">Course/Degree</label>
				<div class="col-lg-8">
					<%= f.text_field 'course', class: "form-control" %>
				</div>
			</div>

			<div class="form-group">
				<label class="control-label col-lg-4">School</label>
				<div class="col-lg-8">
					<%= f.text_field 'school', class: "form-control" %>
				</div>
			</div>
		</div>
	</div>
	<br /><br />
	<%= f.submit 'Save', class: 'btn btn-success btn-block' %>
	<% end %>
</div>