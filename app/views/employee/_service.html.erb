
<%= simple_form_for @child, url: service_index_path, html: {class: "form-horizontal"} do |f| %>
<div class="col-lg-12">
	<div class="col-lg-3">
		<h4>Job Information</h4><hr>
		<div class="form-group">
			<p class="control-label col-lg-5">Date Hired:</p>
			<div class="col-lg-7">
				<%= f.text_field 'fName', class: "form-control" %>
			</div>
		</div>

		<div class="form-group">
			<p class="control-label col-lg-5">Date Appointment:</p>
			<div class="col-lg-7">
				<%= f.text_field 'fName', class: "form-control" %>
			</div>
		</div>

		<div class="form-group">
			<p class="control-label col-lg-5">Position:</p>
			<div class="col-lg-7">
				<%= f.text_field 'fName', class: "form-control" %>
			</div>
		</div>

		<div class="form-group">
			<p class="control-label col-lg-5">Status:</p>
			<div class="col-lg-7">
				<%= f.select 'fName', ['', 'Trainee','Probitionary', 'Regular'], {}, class: "form-control" %>
			</div>
		</div>

		<div class="form-group">
			<p class="control-label col-lg-5">Company:</p>
			<div class="col-lg-7">
				<%= f.text_field 'fName', class: "form-control" %>
			</div>
		</div>

		<div class="form-group">
			<p class="control-label col-lg-5">Branch:</p>
			<div class="col-lg-7">
				<%= f.text_field 'fName', class: "form-control" %>
			</div>
		</div>

		<div class="form-group">
			<p class="control-label col-lg-5">Salary:</p>
			<div class="col-lg-7">
				<%= f.text_field 'fName', class: "form-control", type: "number" %>
			</div>
		</div>
	</div>

	<div class="col-lg-3">
		<h4>Deductions Information</h4><hr>
		<div class="form-group">
			<p class="control-label col-lg-5">SSS:</p>
			<div class="col-lg-7">
				<%= f.text_field 'fName', class: "form-control", type: "number" %>
			</div>
		</div>

		<div class="form-group">
			<p class="control-label col-lg-5">PHIC:</p>
			<div class="col-lg-7">
				<%= f.text_field 'fName', class: "form-control", type: "number" %>
			</div>
		</div>

		<div class="form-group">
			<p class="control-label col-lg-5">HDMF:</p>
			<div class="col-lg-7">
				<%= f.text_field 'fName', class: "form-control", type: "number" %>
			</div>
		</div>

		<div class="form-group">
			<p class="control-label col-lg-5">Withholding Tax:</p>
			<div class="col-lg-7">
				<%= f.text_field 'fName', class: "form-control", type: "number" %>
			</div>
		</div>
	</div>

	<div class="col-lg-3">
		<h4>Allowances Information</h4><hr>
		<div class="col-lg-6">
			<div class="form-group">
				<div class="col-lg-12">
					<%= f.check_box 'fName', {}, "checked-value", "unchecked-value" %>
					Quarter
				</div>
			</div>

			<div class="form-group">
				<div class="col-lg-12">
					<%= f.check_box 'fName', {}, "checked-value", "unchecked-value" %>
					Rice
				</div>
			</div>

			<div class="form-group">
				<div class="col-lg-12">
					<%= f.check_box 'fName', {}, "checked-value", "unchecked-value" %>
					Fuel
				</div>
			</div>
		</div>

		<div class="col-lg-6">
			<div class="form-group">
				<div class="col-lg-12">
					<%= f.check_box 'fName', {}, "checked-value", "unchecked-value" %>
					Representation
				</div>
			</div>

			<div class="form-group">
				<div class="col-lg-12">
					<%= f.check_box 'fName', {}, "checked-value", "unchecked-value" %>
					Telephone
				</div>
			</div>

			<div class="form-group">
				<div class="col-lg-12">
					<%= f.check_box 'fName', {}, "checked-value", "unchecked-value" %>
					Others
				</div>
			</div>
		</div>
	</div>

	<div class="col-lg-3">
		<h4>Benefits/Incentives Information</h4><hr>
		<div class="form-group">
			<p class="control-label col-lg-5">Vacation Leave</p>
			<div class="col-lg-7">
				<%= f.select 'fName', ['0', '5', '7', '7.5', '10', '15'], {}, class: "form-control" %>
			</div>
		</div>

		<div class="form-group">
			<p class="control-label col-lg-5">Sick Leave</p>
			<div class="col-lg-7">
				<%= f.select 'fName', ['0', '5', '7', '7.5', '10', '15'], {}, class: "form-control" %>
			</div>
		</div>

		<div class="form-group">
			<p class="control-label col-lg-5">Bereavement Leave</p>
			<div class="col-lg-7">
				<%= f.select 'fName', ['0', '5', '7', '7.5', '10', '15'], {}, class: "form-control" %>
			</div>
		</div>

		<div class="form-group">
			<p class="control-label col-lg-5">Maternity Leave</p>
			<div class="col-lg-7">
				<%= f.select 'fName', ['0', '5', '7', '7.5', '10', '15'], {}, class: "form-control" %>
			</div>
		</div>

		<div class="form-group">
			<p class="control-label col-lg-5">Paternity Leave</p>
			<div class="col-lg-7">
				<%= f.select 'fName', ['0', '5', '7', '7.5', '10', '15'], {}, class: "form-control" %>
			</div>
		</div>

		<div class="form-group">
			<p class="control-label col-lg-5">Bonus</p>
			<div class="col-lg-7">
				<%= f.text_field 'fName', class: "form-control", type: "number" %>
			</div>
		</div>

		<div class="form-group">
			<p class="control-label col-lg-5">13th month</p>
			<div class="col-lg-7">
				<%= f.text_field 'fName', class: "form-control", type: "number" %>
			</div>
		</div>

		<div class="form-group">
			<p class="control-label col-lg-5">Insurance</p>
			<div class="col-lg-7">
				<%= f.text_field 'fName', class: "form-control", type: "number" %>
			</div>
		</div>

		<div class="form-group">
			<p class="control-label col-lg-5">Car</p>
			<div class="col-lg-7">
				<%= f.select 'fName', ['', 'True', 'False'], {}, class: "form-control" %>
			</div>
		</div>

		<div class="form-group">
			<p class="control-label col-lg-5">Others</p>
			<div class="col-lg-7">
				<%= f.text_field 'fName', class: "form-control", type: "number" %>
			</div><br />
		</div>
	</div>
	<%= f.submit 'Save', class: "btn btn-success btn-block" %>
</div>
<% end %>
