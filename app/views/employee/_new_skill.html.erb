
<%= simple_form_for @skills, url: employee_index_path, html: {class: "form-horizontal"} do |f| %>
<div class="col-lg-12">
	<div class="col-lg-5">
		<div class="form-group">
			<label class="control-label col-lg-4">Type</label>
			<div class="col-lg-8">
				<%= f.select 'type', ['','Technical','Management', 'Business', 'Special'],{}, class: "form-control" %>
			</div>
		</div>

		<div class="form-group">
			<label class="control-label col-lg-4">Name</label>
			<div class="col-lg-8">
				<%= f.text_field 'name', class: "form-control" %>
			</div>
		</div>

		<div class="form-group">
			<label class="control-label col-lg-4">Proficiency Level</label>
			<div class="col-lg-8">
				<%= f.select "level", ['','Functional', 'Intermediate', 'Upper Intermediate', 'Advance', 'Professional'], {}, {class: "form-control"} %>
			</div>
		</div>
	</div>
</div>
<br /><br />
<%= f.submit 'Save', class: 'btn btn-success btn-block' %>
<% end %>
