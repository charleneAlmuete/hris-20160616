
<%= simple_form_for @work, url: new_work_path, html: {class: "form-horizontal"} do |f| %>
<div class="col-lg-12">
	<div class="col-lg-6">
		<div class="form-group">
			<label class="control-label col-lg-3">Position</label>
			<div class="col-lg-7">
				<%= f.text_field 'position', class: "form-control" %>
			</div>
		</div>

		<div class="form-group">
			<label class="control-label col-lg-3">Company</label>
			<div class="col-lg-7">
				<%= f.text_field 'company', class: "form-control" %>
			</div>
		</div>

		<div class="form-group">
			<label class="control-label col-lg-3">Status</label>
			<div class="col-lg-7">
				<%= f.select 'status', ['','Permanent', 'Contractual', 'Job Order'], {}, class: "form-control" %>
			</div>
		</div>

		<div class="form-group">
			<label class="control-label col-lg-3">Reason</label>
			<div class="col-lg-7">
				<%= f.text_field 'reason', class: "form-control" %>
			</div>
		</div>
	</div>

	<div class="col-lg-6">
		<div class="form-group">
			<label class="control-label col-lg-3">From</label>
			<div class="col-lg-7">
				<%= f.text_field 'durFrom', class: "form-control" %>
			</div>
		</div>

		<div class="form-group">
			<label class="control-label col-lg-3">To</label>
			<div class="col-lg-7">
				<%= f.text_field 'durTo', class: "form-control" %>
			</div>
		</div>

		<div class="form-group">
			<label class="control-label col-lg-3">Salary</label>
			<div class="col-lg-7">
				<%= f.text_field 'salary', class: "form-control", type: "number" %>
			</div>
		</div>
	</div>
</div>
<br /><br />
<%= f.submit 'Save', class: 'btn btn-success btn-block' %>
<% end %>
