<%= simple_form_for @exam, method: 'PUT', html: {class: "form-horizontal"} do |f| %>
<div class="col-lg-12">
	<div class="col-lg-5">
		<div class="form-group">
			<label class="control-label col-lg-4">Exam Type</label>
			<div class="col-lg-8">
				<%= f.text_field 'name', class: "form-control" %>
			</div>
		</div>

		<div class="form-group">
			<label class="control-label col-lg-4">Rating</label>
			<div class="col-lg-8">
				<%= f.text_field 'rating', class: "form-control" %>
			</div>
		</div>

		<div class="form-group">
			<label class="control-label col-lg-4">License No</label>
			<div class="col-lg-8">
				<%= f.text_field 'licenseNo', class: "form-control", type: "number" %>
			</div>
		</div>
	</div>
	<div class="col-lg-3 pull-right">
		<div class="img-thumbnail" style="width: 200px; height: 210px; margin-left: 20%; ">
			<img width="100%" height= "100%" src="http://theroboerp.com/app/uploads/noimage.png">
		</div>
		<button class="btn btn-primary btn-block">Browse</button><br />
	</div><br />
</div>
<%= f.submit 'Update', class: 'btn btn-success btn-block' %>
<% end %>
