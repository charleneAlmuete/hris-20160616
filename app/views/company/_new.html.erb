<div class="container">
	<!-- Modal -->
	<div class="modal-dialog">
		<!-- Modal content-->
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
				<h4 class="modal-title">Company Registration</h4>
			</div>
			<div class="modal-body">
				<%= simple_form_for @company, url: company_index_path do |f| %>
				<div class="row">
					<div class="col-lg-6">
						<%= f.text_field 'name', class: "form-control", placeholder: "Name" %>
					</div>
					<div class="col-lg-6">
						<%= f.text_field 'code', class: "form-control", placeholder: "Code" %>
					</div>
				</div><br />
				<div class="form-group">
					<%= f.text_field 'contactno', class: "form-control", placeholder: "Contact No" %>
				</div>
				<div class="form-group">
					<%= f.text_field 'email', class: "form-control", placeholder: "Email" %>  
				</div>
				<div class="form-group">
					<%= f.text_field 'website', class: "form-control", placeholder: "Website" %>
				</div>

				<div class="modal-footer">
					<%= f.submit 'Save', class: 'btn btn-success' %>
				</div>
				<% end %>
			</div>
		</div>
	</div>
</div>
